#!/bin/sh

dir=$(dirname $0)
dir=$(cd $dir;pwd -P)
ddir=$(cd $dir/..;pwd -P)

# sourde environment
. $dir/env

if [ "$SPYTEST_PYTHON_VERSION" != "3.6.6" -a "$SPYTEST_PYTHON_VERSION" != "3.7.1" ]; then
    PYTHONPATH=$($SPYTEST_PYTHON -c 'import site; print(site.getsitepackages()[0])')
fi
export PYTHONPATH=$PYTHONPATH:$ddir
export PATH=$dir:$PATH

exec $SPYTEST_PYTHON "$@"

