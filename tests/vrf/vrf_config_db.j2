{%                 if pc in ['PortChannel101', 'PortChannel102'] %}
        "{{ pc }}": {"vrf_name": "Vrf1"}
{%-                elif pc in ['PortChannel103', 'PortChannel104'] %}
        "{{ pc }}": {"vrf_name": "Vrf2"}
{%-                else %}
        "{{ pc }}": {{ cfg_t0['PORTCHANNEL_INTERFACE'][pc] }}
{%-                endif %}
