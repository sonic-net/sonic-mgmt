        "{{ pc }}": {"vrf_name": "Vrf1"}
{%-                elif pc in ['PortChannel105', 'PortChannel106', 'PortChannel107', 'PortChannel108'] %}
        "{{ pc }}": {"vrf_name": "Vrf2"}
{%-                else %}
        "{{ pc }}": {{ cfg_t0['PORTCHANNEL_INTERFACE'][pc] }}
{%-                endif %}
{%-            endif %}
{%-            if not loop.last %},{% endif %}

{%        endfor %}
    },
