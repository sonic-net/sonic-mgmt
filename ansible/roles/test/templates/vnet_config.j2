
{% set num_vnet = 8 %}
{% set vlan_id_base = 3001 %}
{% set topo_vlan = minigraph_vlans.keys()[0] %}
{% set index = 10 %}
vlan_intf_list:
{% for vlan in range (vlan_id_base, vlan_id_base + num_vnet) %}
  - vlan_id: '{{ (vlan|int) }}'
    ifname: 'Vlan{{ vlan }}'
    ip: '{{ loop.index }}.{{ loop.index }}.10.1/24'
    port: '{{ minigraph_vlans[topo_vlan].members[loop.index] }}'
{% endfor %}

intf_list:
  - ifname: {{ minigraph_vlans[topo_vlan].members[0] }}
    ip: '{{ index }}.{{ index }}.10.1/24'

vnet_id_list:
{% for vnet in range (1, 1 + num_vnet) %}
  - Vnet{{ vnet }}
{% endfor %}

vnet_peer_list:
  - Vnet3: Vnet4
  - Vnet4: Vnet3
  - Vnet7: Vnet8
  - Vnet8: Vnet7

vnet_intf_list:
{% for vlan in range (vlan_id_base, vlan_id_base + num_vnet) %}
  - ifname: Vlan{{ vlan }}
    vnet: Vnet{{ loop.index }}
{% endfor %}

vnet_nbr_list:
{% for vlan in range (vlan_id_base, vlan_id_base + num_vnet) %}
  - ifname: Vlan{{ vlan }}
    ip: '{{ loop.index }}.{{ loop.index }}.10.101'
{% endfor %}
  - ifname: Vlan3001
    ip: '1.1.10.102'
  - ifname: Vlan3002
    ip: '2.2.10.102'
  - ifname: Vlan3005
    ip: '5.5.10.102'
  - ifname: Vlan3006
    ip: '6.6.10.102'
  - ifname: {{ minigraph_vlans[topo_vlan].members[0] }}
    ip: '10.10.10.102'

vnet_local_routes:
  - Vnet1_route_list:
      - pfx: '50.1.1.0/24'
        nh: '1.1.10.101'
        ifname: 'Vlan3001'
      - pfx: '50.2.2.0/24'
        nh: '1.1.10.102'
        ifname: 'Vlan3001'
  - Vnet2_route_list:
      - pfx: '60.1.1.0/24'
        nh: '2.2.10.101'
        ifname: 'Vlan3002'

vnet_route_list:
  - Vnet1_route_list:
      - pfx: '1.1.1.10/32'
        end: '100.1.1.10'
      - pfx: '1.1.1.11/32'
        end: '100.1.1.11'
        mac: '00:00:00:00:01:02'
  - Vnet2_route_list:
      - pfx: '2.2.2.10/32'
        end: '100.1.1.20'
        mac: '00:00:00:00:02:05'
  - Vnet3_route_list:
      - pfx: '1.1.1.10/32'
        end: '100.1.1.10'
        vni: '12345'
      - pfx: '1.1.1.11/32'
        end: '100.1.1.11'
        mac: '00:00:00:00:01:02'
  - Vnet4_route_list:
      - pfx: '4.4.4.10/32'
        end: '100.1.1.40'
        mac: '00:00:00:00:02:05'
