# The switch front panel interfaces
{% for interface in minigraph_interfaces %}
auto {{ interface['alias'] }}
iface {{ interface['alias'] }} {{ interface['family'] }} static
    address {{ interface['addr'] }}
    netmask {{ interface['mask'] }}
